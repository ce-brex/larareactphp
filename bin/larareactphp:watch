#!/usr/bin/env bash

PWD=$(pwd)
PID="0"

function teardown()
{
	kill ${PID}
	exit
}

trap teardown SIGINT

while true; do
	php artisan serve:reactphp &
	PID=${!}
	inotifywait -q \
		-e create -e modify -e move -e delete \
		-r ${PWD}/app -r ${PWD}/config -r ${PWD}/public -r ${PWD}/resources -r ${PWD}/routes \
		${PWD}/.env ${PWD}/composer.json ${PWD}/composer.lock
	kill ${PID}
done
